{
  "name": "Trade",
  "type": "object",
  "properties": {
    "purchase_datetime": {
      "type": "string",
      "format": "date-time",
      "description": "Datum und Uhrzeit des Kaufs"
    },
    "cryptocurrency": {
      "type": "string",
      "enum": [
        "BTC",
        "ETH",
        "SOL",
        "ADA",
        "DOT",
        "AVAX",
        "LINK",
        "MATIC"
      ],
      "description": "Gekaufte Kryptow√§hrung"
    },
    "amount": {
      "type": "number",
      "minimum": 0,
      "description": "Kaufmenge"
    },
    "historical_price": {
      "type": "number",
      "minimum": 0,
      "description": "Historischer Marktpreis zum Kaufzeitpunkt in USD"
    },
    "leverage": {
      "type": "number",
      "minimum": 1,
      "maximum": 125,
      "default": 1,
      "description": "Hebel (1-125x)"
    },
    "total_investment": {
      "type": "number",
      "description": "Gesamtinvestition (berechnet)"
    }
  },
  "required": [
    "purchase_datetime",
    "cryptocurrency",
    "amount",
    "historical_price"
  ]
}
